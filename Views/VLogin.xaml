<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="rtoasaS2B.Views.VLogin"
             Title="VLogin">
    <VerticalStackLayout
        Spacing="25"
        Padding="25">
        <Label 
            Text="INICIO DE SESION"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <Label Text="USUARIO"
                   FontSize="16"
                   Grid.Row="0"
                   Grid.Column="0"/>

            <Entry x:Name="txtUsuario"
                   Placeholder="ingrese el usuario"
                   Grid.Row="0"
                   Grid.Column="1"/>

            <Label Text="CONTRASEÑA"
                   FontSize="16"
                   Grid.Row="1"
                   Grid.Column="0"/>
            <Entry x:Name="txtContraseña"
                   Placeholder="Ingrese lacontraseña"
                   IsPassword="True"
                   Grid.Row="1"
                   Grid.Column="1"/>

        </Grid>

        <Button Text="Iniciar sesion"/>

    </VerticalStackLayout>
</ContentPage>